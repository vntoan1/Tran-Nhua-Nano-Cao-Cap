@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="google-site-verification" content="f-F6fYlSCWqjntzMgwjg-0pYZdJcSQ2ELeBgsBu6HIA" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Trần Nhựa Nano Cao cấp </title>

    <!-- Bootstrap + Icon + CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    @RenderSection("styles", required: false)
</head>
<body>
    <!-- Header -->
    @Html.Partial("_Header")

    <!-- Main Content -->
    <main role="main" class="container pb-3">
        @RenderBody()
    </main>
    <div class="contact-buttons">
        <a href="https://zalo.me/0966358345" target="_blank" class="btn-contact zalo">
            <img src="~/images/zalo-icon.png" alt="Zalo" />
        </a>
        <a href="tel:0966358345" class="btn-contact phone">
            <i class="fas fa-phone-alt"></i>
        </a>
    </div>
    <!-- Footer -->
    @Html.Partial("_Footer")

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
