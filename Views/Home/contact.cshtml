@using Microsoft.AspNetCore.Mvc.RazorPages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Liên hệ";
    Layout = "_Layout";
}
@* Trang liên hệ *@
@{
    Layout = "_Layout";
}
<div class="container my-5">
    <div class="row" style="background-color: black">
        <!-- Thông tin liên hệ -->
        <div class="col-md-5 text-white p-4 rounded">
            <h4>
                <strong>
                    Trần Nhựa Nano Cao cấp
                </strong>
            </h4>
            <p><i class="fas fa-phone-alt"></i> Hotline: 0966358345</p>
            <p><i class="fas fa-map-marker-alt"></i> Địa chỉ: Phố Mới, Phường Hồ, TX Thuận Thành, Bắc Ninh</p>
            <p><i class="fas fa-envelope"></i> Email: vnntoan@gmail.com</p>
        </div>

        <!-- Form liên hệ -->
        <div class="col-md-7 p-4">
            <h4 class="text-white"><strong>THI CÔNG NHỰA ỐP TƯỜNG NANO</strong></h4>
            <form action="https://formspree.io/f/xwpbveyv" method="POST">
                <div class="row mb-2 text-white">
                    <div class="col">
                        <input type="text" class="form-control" name="name" placeholder="Họ và tên" required>
                    </div>
                    <div class="col">
                        <input type="email" class="form-control" name="email" placeholder="Email" required>
                    </div>
                </div>
                <div class="row mb-2 text-white">
                    <div class="col">
                        <input type="text" class="form-control" name="phone" placeholder="Điện thoại" required>
                    </div>
                    <div class="col text-white">
                        <input type="text" class="form-control" name="address" placeholder="Địa chỉ">
                    </div>
                </div>
                <div class="mb-2 text-white">
                    <select class="form-control" name="province" required>
                        <option value="">Quý khách chọn tỉnh thành</option>
                        <option>Hà Nội</option>
                        <option>Bắc Ninh</option>
                        <option>Hưng Yên</option>
                        <option>Hải Dương</option>
                        <!-- Thêm tỉnh thành khác -->
                    </select>
                </div>
                <div class="mb-3 text-white">
                    <textarea class="form-control" name="message" rows="3" placeholder="Nhập nội dung"></textarea>
                </div>
                <button type="submit" class="btn btn-warning text-white">ĐĂNG KÝ NGAY</button>
            </form>
            <div id="formResult" class="mt-3"></div>
        </div>
    </div>
</div>
